
// ===========================================================================
//  Button styles
// ===========================================================================

.btn
    appearance: none
    background-color: $border-color
    border-radius: $border-radius
    border: 1px solid transparent
    outline: 0
    padding: 0.5rem 0.7rem
    transition: all ease 0.3s

    html.no-touch &:hover
        cursor: pointer

_btn($NAME, $COLOR, $TEXT_OVERRIDE=$white)

    .btn-{$NAME}
        // text-shadow: 0 0 1px rgba(0, 0, 0, 0.6)
        background-color: $COLOR
        border-color: $COLOR
        color: $TEXT_OVERRIDE

    .btn-{$NAME}-outline
        background-color: transparent
        border-color: initial
        color: $COLOR

    html.no-touch
        .btn-{$NAME}:hover,
        .btn-{$NAME}[aria-pressed="true"]
            background-color: darken($COLOR, $DARKEN_COLORS)

        .btn-{$NAME}-outline:hover,
        .btn-{$NAME}-outline[aria-pressed="true"]
            background-color: darken($COLOR, $DARKEN_COLORS)
            border-color: darken($COLOR, $DARKEN_COLORS)
            color: $TEXT_OVERRIDE

_btn('primary', $link-color, $white)


.btn-block
    width: 100%
    display: block



a:link,
.btn-link,
.link
    color: $link-color
    background-color: transparent

    html.no-touch &:hover
        color: darken($link-color, 50%)
