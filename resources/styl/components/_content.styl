[hidden]
    display: none


$content-margin = $grid-gutter-width


$h1-size = 1.6rem
$h2-size = 1.3rem

h1, h2, h3,
.h1, .h2, .h3
    margin: $content-margin 0
    font-weight: bold

h1, .h1
    font-size: $h1-size

h2, .h2
    font-size: $h2-size
    &:after
        content: ''
        display: block
        width: 100%
        margin-top: $mt
        border-bottom: 1px solid $border-color

p
    margin: $content-margin 0


.grid >
    h1, .h1
        font-size: $h1-size

    h2, .h2
        font-size: $h2-size

    h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6
        margin: 0


