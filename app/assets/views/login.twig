{% extends "layouts/main" %}

{% block content %}
    <div class="user-form l-center content card grid">
        <h1>Login</h1>

        <form class="grid" action="/auth/login" method="post">

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" id="exampleInputEmail1" aria-describedby="emailHelp" minlength="5" autocomplete="email" placeholder="Enter email" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="form-group">
                <label for="examplePasswordInput">Password</label>
                <input type="password" id="examplePasswordInput" autocomplete="current-password" minlength="6" placeholder="Enter password" required>
            </div>

            <div class="form-group">
                <button class="btn-primary btn-block" type="submit">Login</button>
            </div>

            <div>
                <a href="/forgot/password">Forgot Password?</a>
            </div>
        </form>
    </div>
{% endblock %}
