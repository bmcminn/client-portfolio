
$button-opacity = 0.1
$transition-speed = 0.2s
$border-radius = 3px

$button-width   = 3rem
$button-height  = 3rem


// wrapper
.yalb_wrapper
  position: fixed
  width: 100%
  height: 100%
  overflow: hidden
  top: 0
  background-color: rgba(0,0,0,0.5)
  z-index: 10000
  // Comment in to disable yalb-closing by clicking on the wrapper
  // pointer-events: none


// container
.yalb
  margin: 0 auto 0
  border: $border-radius solid $gray-light
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.8)
  width: 325px
  height: 37px
  position: relative
  bottom: -35%
  background-color: $black
  border-radius: $border-radius
  overflow: hidden
  font-family: sans-serif
  // Comment in to disable yalb-closing by clicking on the wrapper
  // pointer-events: auto


  // prev / next / close
  span.prev,
  span.next,
  span.close
    text-decoration: none
    color: #000
    line-height: 100%
    transition: all $transition-speed linear
    display: block
    cursor: pointer



  span.prev,
  span.next
    background-color: $white
    padding: 0
    font-size: 35px
    height: $button-height
    width: $button-width
    z-index: 3
    position: relative
    vertical-align: middle
    bottom: -50%
    margin-top: ($button-height/-2)
    top: 50%
    opacity: $button-opacity

    $arrow-size = 10px

    &::before
      content: ""
      border: $black solid $arrow-size
      position: relative
      display: block
      top: 14px
      height: 0
      width: 0
      arrowWidth($arrow-size * 1.5)
      arrowHeight($arrow-size)


  span.prev
    background-image: linear-gradient(to right, $white 0%, rgba(0,0,0,0)) 100%
    left: -1px
    float: left
    border-radius: 0 $border-radius $border-radius 0

    &::before
      // content: '\21DA'
      right: 0
      arrowLeft()


  span.next
    background-image: linear-gradient(to left, $white 0%, rgba(0,0,0,0)) 100%
    right: -1px
    float: right
    border-radius: $border-radius 0 0 $border-radius

    &::before
      // content: '\21DB'
      left: 33%
      arrowRight()


  span.prev:hover,
  span.next:hover,
  span.close:hover
    text-shadow: 0 0 3px #000


  span.close
    background-color: white
    z-index: 4
    position: absolute
    border-radius: 0 $border-radius 0 $border-radius
    padding: 10px
    top: 0
    right: 0
    font-size: 20px
    opacity: $button-opacity
    height: 1.2rem;
    width: 1.2rem;
    text-align: center;

    &.close::before
      content: '\2716'


  &:hover span.close,
  &:hover span.prev,
  &:hover span.next
    opacity: 1



  // error-msg
  strong.error
    box-sizing: border-box
    position: absolute
    display: block
    text-align: center
    margin-top: 2px
    padding: 0 48px
    width: 100%
    top: 20%
    z-index: 1

    &::before
      content: 'Image could not be loaded'


  // image
  img.image
    height: 100%
    width: 100%
    display: block
    position: absolute
    z-index: 1
    top: 0
    left: 0


  // loader-icon
  span.loader
    position: absolute
    margin: 0 auto
    z-index: 2
    bottom: 50%
    margin-bottom: -14px
    left: 50%
    margin-left: -10px
    display: block
    border: 3px solid rgba(200,200,200,0.8)
    animation: loading 1.1s infinite linear
    height: 20px
    width: 20px
    border-radius: 50%


  @keyframes loading
    50%
      height: 10px
      width: 10px
      margin-bottom: -7px
      margin-left: -5px




