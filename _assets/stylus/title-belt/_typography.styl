$line-height = 1.5rem



html
	line-height: $line-height


code
	padding: 0.25rem


pre
	tab-size: 2

	code
		background-color: transparent
		padding: 0



h1, .h1
	line-height: 2.5rem
h2, .h2
	line-height: 2rem
h3, .h3
	line-height: 1.8rem
h4, .h4
	line-height: 1.5rem
h5, .h5,
h6, .h6
	line-height: 1.3rem


//
// Modifier classes
//

.text-left
	text-align: left

.text-center
	text-align: center

.text-right
	text-align: right
