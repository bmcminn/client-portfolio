
@import "_variables"


.legal-page

  .page-header
    padding-bottom: 0


  .page-content
    color: $text-color
    padding: 0 1.5rem
    max-width: $max-width
    margin-left: auto
    margin-right: auto
    // > *
    //   color: inherit

  h1,
  h2,
  h3,
  h4
    text-transform: uppercase

  h2
    margin-top: 3rem
    padding-bottom: 0.5rem
    border-bottom: 3px solid darken($text-color, 60%)


  hr
    margin: 2.5rem 0
    height: 0
    width: 100%
    border: 0
    border-bottom: 3px solid darken($text-color, 60%)

  a
    // color: $white
    text-decoration: underline

    &:hover
      color: $white
