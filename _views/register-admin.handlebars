{{> header-login }}

  <form action="{{url /register }}" method="POST">
    <h1>{{ labels.registerAdmin }}</h1>

    {{#if formError }}
    <ul class="error">
      {{#each formError }}
        <li>{{ . }}</li>
      {{/each}}
    </ul>
    {{/if}}



    <label for="fname" class="half">
      {{ labels.fname }}
      <input  name="fname" id="fname" type="text" value="{{ registerInfo.fname }}">
    </label>

    <label for="lname" class="half">
      {{ labels.lname }}
      <input  name="lname" id="lname" type="text" value="{{ registerInfo.lname }}">
    </label>



    <label for="emailAddress">
      {{ labels.emailAddress }}
      <input name="emailAddress" id="emailAddress" type="email" placeholder="{{ labels.placeholder.email }}" value="{{ registerInfo.emailAddress }}">
    </label>


    <label for="website">
      {{ labels.website }}
      <input name="website" id="website" type="url" placeholder="{{ labels.placeholder.website }}" value="{{ registerInfo.website }}">
    </label>


    <label for="username">
      {{ labels.username }}
      <input name="username" id="username" type="text" value="{{ registerInfo.username }}">
    </label>





    <label for="password">
      {{ labels.password }}
      <input name="password" id="password" type="password" value="">
    </label>

    <label for="confirmPassword">
      {{ labels.confirmPassword }}
      <input name="confirmPassword" id="confirmPassword" type="password" value="">
    </label>

    <button type="submit">Submit</button>
  </form>

{{> footer-login }}
